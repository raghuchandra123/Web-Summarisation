{
  "name": "Summarization AI",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Generate a short summary of webpage using Chrome built-in summarization API.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "sidePanel", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_title": "Generate a summary"
  },
  "icons": {
    "16": "images/summarise16.png",
    "48": "images/summarise48.png",
    "128": "images/summarise128.png"
  }
}
